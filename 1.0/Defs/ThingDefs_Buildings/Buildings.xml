  	<ThingDef ParentName="BuildingBase">
		<defName>GFM_GuardSpot</defName>
		<thingClass>aRandomKiwi.GFM.Building_GuardSpot</thingClass>
		<label>a guard spot</label>
		<description>Designates a spot on the ground where guards should guard.</description>
		<size>(1,1)</size>
		<passability>Standable</passability>
		<designationCategory>Security</designationCategory>
		<scatterableOnMapGen>false</scatterableOnMapGen>
